<!DOCTYPE html>
<html lang="pt-BR">
<head class="header">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <style>
        header{
            height: 80px;            
        }
        nav{
            height: 700px;
           }
   </style> 
  </head>


<body class="d-flex flex-wrap">    

    <header class="header bg-dark w-100">
        <p class="text-white">header</p>
    </header>

    <nav class="bg-dark w-25">
        <p class="text-white">nav</p>        
    </nav>  
    
    <section class="bg-white w-75 container-fluid">
        <h1 class="">Buscar Aluno</h1>
        <hr>

        <div class="row">
            <div class="col-4 form-group">
                <label>CPF: </label>
                <input class="form-control" type="text" name="cpf" placeholder="Digite o CPF">
            </div>
            
            <div class="col-2 mt-4" >
                <button class="btn btn-success btn-block" type="submit">Buscar</button>
            </div>
        </div>

        <div class="table-responsive mt-2">
        <table class="table table-striped">            
            <thead>
              <tr class="table-dark">
                <th scope="col">CPF</th>
                <th scope="col">Nome</th>
                <th scope="col">Curso</th>
                <th scope="col" colspan="2">Ações</th>
              </tr>
            </thead>

            <tbody>  
                <% for(i = 0; i < aluno.length; i++){ %>
                    <% let id = aluno[i].id %>
                    <% let cpf = aluno[i].cpfAluno %>
                    <% let nome = aluno[i].nomeAluno %>
                    <% let curso = aluno[i].nomeCurso %>
                <tr>
                    <td><%= cpf %></td>
                    <td><%= nome %></td>
                    <td><%= curso %></td>
                    <td>
                        <i class="fas fa-edit text-primary"></i>
                        <i class="fas fa-times text-danger"></i>
                    </td>
                </tr>
               <% } %>
            </tbody>
          </table>
        </div>
    </section>
   
  <script src="app.js"></script>
   </body>
</html>
